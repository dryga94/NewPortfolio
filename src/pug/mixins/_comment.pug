mixin comment(imgNum,name,time,text, count)
    .comment
        .comment__wrapper
            img.comment__img(src="./img/main/" + imgNum[count] + '.jpg')
            .comment__builder
                .comment__info
                    .comment__author= name[count]
                    .comment__date= '/ ' + time[count]
                .comment__text= text[count]
        - if (count < 4 && count > 2)
            +comment(imgNum,name,time,text, count-1) 
            //- 2
            +comment(imgNum,name,time,text, count+2)
            //- 5
        - if (count > 1 && count < 3 )
            +comment(imgNum,name,time,text, count-1)
            //- 2
            +comment(imgNum,name,time,text, count+2)
            //- 4
        -if (count > 0 && count < 2)
            +comment(imgNum,name,time,text, count-1)
            //- 3

        